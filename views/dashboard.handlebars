<!--HEADER -->
<header class="masthead">
    <div class="container d-flex h-100 align-items-center">
        <div class="mx-auto text-center">
            <h1 class="mx-auto my-0 text-uppercase">Our Coffees</h1>
            <div class="container">

                <br>
                <br>
                <br>
                <!--CAROUSEL START PHOTO SIZES-->
                <div id="myCarousel" class="carousel slide" data-ride="carousel"
                    style="width: 375px; height:375px; margin: 0 auto">
                    <div class="carousel-inner">

                        <!--CAROUSEL PHOTO 1-->
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="https://i.ibb.co/BGZN8Kw/kcup.jpg" alt="First slide">
                            <br>
                        </div>
                        <!--CAROUSEL PHOTO 1-->

                        <!--CAROUSEL PHOTO 2-->
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://i.ibb.co/hmtxLdn/Ethiopian-Coffee.jpg"
                                alt="Second slide">
                            <br>
                        </div>
                        <!--CAROUSEL PHOTO 2-->

                        <!--CAROUSEL PHOTO 3-->
                        <div class="carousel-item">
                            <img class="d-block w-100" src="https://i.ibb.co/3NyMQss/kcup2.jpg" alt="Third slide">
                            <br>
                        </div>
                        <!--CAROUSEL PHOTO 3-->

                    </div>
                    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!--END CAROUSEL-->

            </div>
        </div>
</header>

<hr>

<!-- MY PROFILE -->
<div class="containter-fluid">
    <div class="row">
        <div class="col-sm-4">
            <h3 class="text-black-20 mx-auto mt-2 mb-3">User Profile</h3>
            <h5 class="text-black-20 mx-auto mt-2 mb-0">Welcome Liberty</h5>
            <h5 class="text-black-20 mx-auto mt-2 mb-5">Beans Member</h5>

            <a href="https://young-forest-75020.herokuapp.com/">
                <i class="glyphicon glyphicon-user"></i>
                Log Out </a>
        </div>

        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-black-20 mx-auto mt-2 mb-0">Likes</h3>

                </div>
                <div class="card-body">
                    <p>Double Donut Cofffee
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-black-20 mx-auto mt-2 mb-0">Disikes</h3>

                </div>
                <div class="card-body">
                    <p>Random Coffee</p>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>
<br>

<div class="container-fluid">
    <div class="row">
        {{#each coffees}}
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
            <div class="card h-250">
                <img style="height: 200px;" class="card-img-top" src="{{this.img}}" alt="Coffee Image">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.company}}</p>
                    <p class="card-text">Type: {{this.flavor}}</p>
                    <p class="card-text">Caffinated: {{this.caf}}</p>

                    <center>
                        <button type="button" class="btn btn-success like" data-id="{{id}}" value="true"
                            data-newrating="{{like}}">Like</button>
<hr>
                        <button type="button" class="btn btn-danger dislike" data-id="{{id}}" value="false"
                            data-newrating="{{like}}">Dislike</button>
                    </center>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>

